<?xml version='1.0' encoding='utf-8'?>
<widget id="info.valdese.vlp" version="0.9.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name short="ValdeseLP">Valdese Lakeside Park</name>
    <description>
        Navigating the new park, complete with a park plan overlay.
    </description>
    <author email="online@noteworthysoftware.com" href="https://nwsw.net">
        Noteworthy Software, Inc.
    </author>
    <content src="index.html" />
    <preference name="SplashScreen" value="none"/>
    <preference name="ShowSplashScreenSpinner" value="false" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <splash src="res/splash.png" />
        <preference name="Fullscreen" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
        <string>show your location inside the Valdese Lakeside Park</string>
    </edit-config>    
</widget>
